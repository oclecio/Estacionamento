@model Estacionamento.Models.TabelaPrecos

@{
    ViewData["Title"] = "Create";
}

<h1 align="center">Tabela de preços</h1>
<p align="right">
    <a class="btn btn-warning" asp-action="Index"><i class="fa fa-clipboard-list"></i><span>Voltar para lista de preços</span></a>
</p>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoInicial" class="control-label"></label>
                <input asp-for="PrecoInicial" class="form-control preco" />
                <span asp-validation-for="PrecoInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoAdicional" class="control-label"></label>
                <input asp-for="PrecoAdicional" class="form-control preco" />
                <span asp-validation-for="PrecoAdicional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-info w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
